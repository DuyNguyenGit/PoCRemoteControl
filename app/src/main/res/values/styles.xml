<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="fs_remote_key_button">
        <item name="android:layout_width">@dimen/_40sdp</item>
        <item name="android:layout_height">@dimen/_40sdp</item>
        <item name="android:background">@drawable/remote_keys_bg</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="fs_remote_number_pad_text_button" parent="FONT_ROBOT_REGULAR">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/rc_app_ripple_effect</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/remote_num</item>
        <item name="android:textSize">@dimen/_20sdp</item>
        <item name="android:clickable">false</item>
        <item name="android:focusable">false</item>
    </style>

    <style name="fs_remote_switch_button">
        <item name="android:layout_height">@dimen/_40sdp</item>
        <item name="android:thumb">@drawable/fs_thumb_bg</item>
        <item name="android:track">@drawable/fs_remote_switch_sel</item>
        <item name="android:background">@null</item>
        <item name="android:layoutDirection">ltr</item>
        <item name="android:switchMinWidth">@dimen/_70sdp</item>
        <item name="android:textOff">""</item>
        <item name="android:textOn">""</item>
        <item name="android:contentDescription">Number pad and playback control</item>
    </style>

    <style name="fs_remote_feature_card_thumbnail">
        <item name="android:layout_width">@dimen/_120sdp</item>
        <item name="android:layout_height">@dimen/_120sdp</item>
    </style>

    <style name="fs_remote_feature_card_title" parent="FONT_ROBOT_REGULAR_BOLD">
        <item name="android:layout_width">@dimen/_161sdp</item>
        <item name="android:layout_height">@dimen/_20sdp</item>
        <item name="android:layout_marginStart">@dimen/_20sdp</item>
        <item name="android:textColor">@color/FS_19_SUB_TITLE</item>
        <item name="android:textSize">@dimen/_17sdp</item>
    </style>

    <style name="fs_remote_feature_card_description" parent="FONT_ROBOT_REGULAR">
        <item name="android:layout_width">@dimen/_161sdp</item>
        <item name="android:layout_height">@dimen/_62sdp</item>
        <item name="android:layout_marginStart">@dimen/_20sdp</item>
        <item name="android:layout_marginTop">@dimen/_3sdp</item>
        <item name="android:textColor">@color/FS_19_SUB_TITLE</item>
        <item name="android:textSize">@dimen/_12sdp</item>
    </style>

    <style name="fs_remote_feature_card_discover_more" parent="FONT_ROBOT_REGULAR">
        <item name="android:layout_width">@dimen/_161sdp</item>
        <item name="android:layout_height">@dimen/_23sdp</item>
        <item name="android:layout_marginStart">@dimen/_20sdp</item>
        <item name="android:layout_marginTop">@dimen/_3sdp</item>
        <item name="android:background">@drawable/fs_featurecard_discover_bg</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textColor">@color/FS_19_SUB_TITLE</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="fs_remote_color_key_button">
        <item name="android:layout_width">@dimen/_40sdp</item>
        <item name="android:layout_height">@dimen/_40sdp</item>
        <item name="android:background">@drawable/remote_keys_bg</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="fs_tv_control_vol_icon">
        <item name="android:layout_width">@dimen/_40sdp</item>
        <item name="android:layout_height">@dimen/_32sdp</item>
    </style>

    <style name="contextual_remote_tab_style">
        <item name="tabIndicatorColor">#00000000</item>
        <item name="tabSelectedTextColor">@color/COLOR_0074D4</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="FONT_ROBOT_REGULAR">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="FONT_ROBOT_REGULAR_BOLD">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
    </style>


</resources>